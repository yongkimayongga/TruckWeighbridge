<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.truck.weighbridge.ui.list.ListFragment"
        android:label="ListFragment">
        <action
            android:id="@+id/action_listFragment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_listFragment_to_editFragment"
            app:destination="@id/editFragment">
        </action>
    </fragment>

    <fragment
        android:id="@+id/addFragment"
        android:name="com.truck.weighbridge.ui.list.AddFragment"
        android:label="AddFragment" />
    <fragment
        android:id="@+id/editFragment"
        android:name="com.truck.weighbridge.ui.list.EditFragment"
        android:label="EditFragment">
        <argument
            android:name="truck"
            app:argType="com.truck.weighbridge.persistence.Truck"
            app:nullable="true" />
    </fragment>
</navigation>